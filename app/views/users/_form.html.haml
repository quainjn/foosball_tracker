= form_for resource, :html => {:class => 'stacked'} do |f| 
  = render 'shared/error_messages', :target => resource   
  
  .field
    = f.label :name, 'Your Name'
    = f.text_field :name
   
  .field
    = f.label :email, 'Email Address'
    = f.text_field :email, :type => 'email'
    
  .field
    = f.label :password
    = f.password_field :password 
  
  - if resource.new_record?
    .field
      = f.submit "Let's Play Foosball!", :class => 'btn-primary'
  - else
    .section.actions
      = f.submit 'Save'
      = link_to 'Cancel', resource_path, :class => 'btn'
  